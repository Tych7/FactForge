<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DesktopApp.MainWindow"
        Title="DesktopApp"
        WindowState="FullScreen"
        >

    <Viewbox Stretch="Uniform">
        <ContentControl Name="MainContent">
            <Grid Width="1920" Height="1080">
                <Grid.Background>
                    <ImageBrush Source="Assets/Backgrounds/BricksDesktop.png" Stretch="UniformToFill"/>
                </Grid.Background>

                <Border Classes="neon-frame" Height="700" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
                    <Image Source="Assets/Logos/Logo.png"
                        Stretch="Uniform"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        />
                </Border>


                <Button 
                    Classes="neon-text-button"
                    Height = "80" 
                    Content="START" 
                    Click="StartClick"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,125"
                />


            </Grid>
        </ContentControl>
    </Viewbox>
</Window>
