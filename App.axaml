<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DesktopApp.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <FontFamily x:Key="OrbitronRegular">
            avares://DesktopApp/Assets/Fonts/Orbitron-Regular.ttf#Orbitron Regular
        </FontFamily>

        <FontFamily x:Key="OrbitronBold">
            avares://DesktopApp/Assets/Fonts/Orbitron-Bold.ttf#Orbitron Bold
        </FontFamily>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://DesktopApp/Styles/Icons.xaml"/> 
        <!-- Merge external style sheets -->
        <StyleInclude Source="avares://DesktopApp/Styles/TextStyles.xaml"/> 
        <StyleInclude Source="avares://DesktopApp/Styles/Elements.xaml"/> 
        <StyleInclude Source="avares://DesktopApp/Styles/Input.xaml"/> 
        <StyleInclude Source="avares://DesktopApp/Styles/Buttons.xaml"/> 
    </Application.Styles>

    
</Application>