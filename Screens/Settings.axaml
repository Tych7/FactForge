
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopApp"
             x:Class="DesktopApp.Settings"
             x:DataType="local:Settings">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.Background>
                <ImageBrush Source="avares://DesktopApp/Assets/Backgrounds/BricksDesktop.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
                <TextBlock
                    Text="Settings"
                    Classes="neon-header"
                    FontSize="60"
                    HorizontalAlignment="Center"/>
                <Border
                    Classes="neon-underline"
                    Margin="0,10,0,0"/>
            </StackPanel>

            <Border Classes="neon-frame" Height="600" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center" VerticalAlignment="Top">  
                    <Grid x:Name="WindowGrid">
                        <StackPanel x:Name="FullscreenSetting" Orientation="Horizontal" Height="50" VerticalAlignment="Top" Margin="0,20,0,0">
                            <TextBlock Text="Display Mode: " Classes= "neon-text" FontSize = "30" VerticalAlignment="Center"/>
                        </StackPanel>

                    </Grid>
                </Viewbox>
            </Border>

            <Button
                Name="BackButton" 
                Classes="neon-icon-button"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="BackClick">
                <Border>
                    <PathIcon
                        Data="{StaticResource arrow_left_regular}" />
                </Border>
            </Button>

            <Button 
                Classes="neon-text-button"
                Height = "80" 
                Content="SAVE" 
                Click="SaveClick"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0,0,0,100"
                Foreground= "#8C52FF"
            />
            

        </Grid>
    </Viewbox>         
</UserControl>
