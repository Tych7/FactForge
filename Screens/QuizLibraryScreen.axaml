<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopApp"
             x:Class="DesktopApp.QuizLibraryScreen"
             x:DataType="local:QuizLibraryScreen">

    <Viewbox Stretch="Uniform">
        <Grid x:Name="MainGrid" Width="1920" Height="1080">
            <Grid.Background>
                <ImageBrush Source="avares://DesktopApp/Assets/Backgrounds/BricksDesktop.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
                <TextBlock
                    Text="Quiz Library"
                    Classes="neon-header"
                    FontSize="60"
                    HorizontalAlignment="Center"/>
                <Border
                    Classes="neon-underline"
                    Margin="0,10,0,0"/>
            </StackPanel>

            <Button
                Name="BackButton" 
                Classes="neon-icon-button"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="BackClick">
                <Border>
                    <PathIcon
                        Data="{StaticResource arrow_left_regular}" />
                </Border>
            </Button>

            <Button
                Name="CreateNewQuizButton"
                Height = "80" 
                Classes="neon-text-button"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Click="CreateNewQuizClick"
                Content="CREATE NEW"
                Margin="0,0,0,100"
                Foreground= "#8C52FF"
            />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <!-- Quiz Scroll View -->
                <Grid x:Name="QuizListPanel" Height="500" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                <!-- Quiz Details -->
                <Border Classes="neon-frame" Height="500" Width="450" HorizontalAlignment="Right" VerticalAlignment="Center">
                    
                </Border>
            </StackPanel>
            
        </Grid>
    </Viewbox>         
</UserControl>
