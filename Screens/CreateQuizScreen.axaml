<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopApp"
             x:Class="DesktopApp.CreateQuizScreen"
             x:DataType="local:CreateQuizScreen">

    <Viewbox Stretch="Uniform">
        <Grid x:Name="MainGrid" Width="1920" Height="1080">
            <Grid.Background>
                <ImageBrush Source="avares://DesktopApp/Assets/Backgrounds/BricksDesktop.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <StackPanel Orientation="Horizontal">
                <Button
                    Name="BackButton" 
                    Classes="neon-icon-button"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Click="BackClick">
                    <Image Source="avares://DesktopApp/Assets/Icons/arrow.png"
                        Stretch="Uniform"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
                </Button>

                <Button
                    Name="NewPageButton" 
                    Classes="neon-icon-button"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Click="NewPageClick">
                    <Image Source="avares://DesktopApp/Assets/Icons/plus.png"
                        Stretch="Uniform"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
                </Button>

                <Button 
                    Height = "80" 
                    Classes="neon-text-button" 
                    Content="OPEN PANEL" 
                    Click="OpenPanelClick"
                    Margin="20,0,0,0"
                    Foreground= "#8C52FF"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                />
            </StackPanel>
            

            <StackPanel Height="972" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Border x:Name = "QuizOverview" Classes="neon-frame" Height="972" >

                </Border>

                <Border Classes="neon-frame" Height="972" Width="1728" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <Grid x:Name="Quizpage">
                    
                    </Grid>
                </Border>
            </StackPanel>

            





            
        </Grid>
    </Viewbox>         
</UserControl>
