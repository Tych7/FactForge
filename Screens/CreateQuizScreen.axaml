<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopApp"
             x:Class="DesktopApp.CreateQuizScreen"
             x:DataType="local:CreateQuizScreen">

    <Viewbox Stretch="Uniform">
        <Grid x:Name="MainGrid" Width="1920" Height="1080">
            <Grid.Background>
                <ImageBrush Source="avares://DesktopApp/Assets/Backgrounds/BricksDesktop.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <Button
                Name="BackButton" 
                Width="96"
                Classes="neon-icon-button"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="BackClick">
                <Image Source="avares://DesktopApp/Assets/Icons/arrow.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
            </Button>

            <Button
                Name="NewPageButton" 
                Width="96"
                Classes="neon-icon-button"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="NewPageClick"
                Margin="96,0,0,0">
                <Image Source="avares://DesktopApp/Assets/Icons/plus.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
            </Button>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="1080">
                <Border x:Name = "QuizOverview" Classes="neon-frame" Height="972" Width="192" VerticalAlignment="Bottom"/>
                <Grid x:Name="Quizpage" Width="1728" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
            </StackPanel>

        </Grid>
    </Viewbox>         
</UserControl>
